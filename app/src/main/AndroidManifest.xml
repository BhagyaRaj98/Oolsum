<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bhagy.oolsum">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.MainScreenActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.ConsultDietitianActivity"
            android:configChanges="orientation|screenSize"
            android:label="Choose Institution/Dietitian"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.ConsultDietitianActivity" />
        </activity>
        <activity
            android:name=".activities.HospitalsInfoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/hospital_details_title"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.HospitalsInfoActivity" />
        </activity>
        <activity
            android:name=".activities.IndependentsInfoActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/independent_details_title"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.IndependentsInfoActivity" />
        </activity>
        <activity
            android:name=".activities.DietitianListActivity"
            android:configChanges="orientation|screenSize"
            android:label="Dietitian List"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.DietitianListActivity" />
        </activity>
        <activity
            android:name=".activities.EditProfileActivity"
            android:configChanges="orientation|screenSize"
            android:label="Edit Profile"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.EditProfileActivity" />
        </activity>
        <activity
            android:name=".activities.ConsultationHistoryActivity"
            android:configChanges="orientation|screenSize"
            android:label="Consultation History"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.ConsultationHistoryActivity" />
        </activity>
        <activity
            android:name=".activities.ContactUsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Contact Us"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.ContactUsActivity" />
        </activity>
        <activity
            android:name=".activities.ConsultationDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="Consultation Details"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.ConsultationDetailsActivity" />
        </activity>
        <activity android:name=".activities.ViewDietChartActivity"
            android:configChanges="orientation|screenSize"
            android:label="View DietChart"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhagy.oolsum.activities.ViewDietChartActivity" />
        </activity>
    </application>

</manifest>