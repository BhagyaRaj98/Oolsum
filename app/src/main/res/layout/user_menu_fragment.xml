<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_consult_dietitian"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_consult_dietitian"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_heart_checkup" />

            <TextView
                android:id="@+id/tv_consult_dietitian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Consult Dietitian" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_consultation_history"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_history"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/history_calendar" />

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Consultation History" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ongoing_consultation"
            style="@style/MenuItemStyle"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_ongoing_consultation"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/history_calendar" />

            <TextView
                android:id="@+id/tv_ongoing_consultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ongoing Consultation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_check_bmi"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_check_bmi"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/history_calendar" />

            <TextView
                android:id="@+id/tv_check_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Check BMI" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kids_growth_chart"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_kids_growth_chart"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/history_calendar" />

            <TextView
                android:id="@+id/tv_kids_growth_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kids Growth Chart" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_about_nutrients"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_about_nutrients"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/history_calendar" />

            <TextView
                android:id="@+id/tv_about_nutrients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About Nutrients" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rda"
            style="@style/MenuItemStyle"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_rda"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_restaurant" />

            <TextView
                android:id="@+id/tv_rda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="RDA" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_faq"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_faq"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_speech_bubble" />

            <TextView
                android:id="@+id/tv_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FAQ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_feedback"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_feedback"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_survey" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Feedback" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact_us"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_contact_us"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_contact_us" />

            <TextView
                android:id="@+id/tv_contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Contact Us" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about_us"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_about_us"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_recruitment" />

            <TextView
                android:id="@+id/tv_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About Us" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_privacy_policy"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_privacy_policy"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_key" />

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Privacy Policy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_terms_of_use"
            style="@style/MenuItemStyle"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_terms_of_use"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_checklist" />

            <TextView
                android:id="@+id/tv_terms_of_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Terms Of Use" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_logout"
            style="@style/MenuItemStyle">

            <ImageView
                android:id="@+id/iv_logout"
                style="@style/MenuIconStyle"
                app:srcCompat="@drawable/ic_logout" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Logout" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
