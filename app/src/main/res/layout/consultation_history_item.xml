<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardView_light_background"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_consultation_history_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/consultation_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="AlphaClient2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_consultation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_patient_name"
                android:paddingTop="4dp"
                android:text="13/01/2018 12:29:34"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/arrow_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tv_fee_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee: " />

            <TextView
                android:id="@+id/tv_consultation_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_fee_label"
                android:layout_toRightOf="@id/tv_fee_label"
                android:text="Rs.2000"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/view_diet_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@id/chat_history_bubble"
                android:layout_toStartOf="@id/chat_history_bubble"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_manage_template" />

            <ImageView
                android:id="@+id/chat_history_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_chat_bubbles" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
